<p id="notice"><%= notice %></p>

<h1>Room Assignments</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Pull</th>
      <th>Dorm</th>
      <th>Dorm Name</th>
      <th>Room Number</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_assignments.each do |room_assignment| %>
      <tr>
        <td><%= room_assignment.student %></td>
        <td><%= room_assignment.pull %></td>
        <td><%= room_assignment.room.dorm %></td>
        <td><%= room_assignment.room.dorm.name %></td>
        <td><%= room_assignment.room.number %></td>
        <td><%= room_assignment.description %></td>
        <td><%= link_to 'Show', room_assignment %></td>
        <td><%= link_to 'Edit', edit_room_assignment_path(room_assignment) %></td>
        <td><%= link_to 'Destroy', room_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

