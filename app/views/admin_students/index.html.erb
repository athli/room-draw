<p id="notice"><%= notice %></p>

<h1>Students</h1>
<%= link_to 'Admin home', admin_home_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Number</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <% next if !user.has_student? %>
      <tr>
        <td><%= user.first_name %> <%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.student.class_rank %> <%= user.student.room_draw_number %></td>
        <td><%= user.student.format_status %></td>
        <td><%= link_to 'Details', admin_student_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_student_path(user) %></td>
        <td><%= link_to 'Delete', admin_student_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_admin_student_path %>
