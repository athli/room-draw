<!DOCTYPE html>
<html>
  <head>
    <title>RoomDraw</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-inverse bg-inverse">
    <div class = "container">
        <div class = "navbar-header">
        <%= link_to image_tag('logo-HMC.png', :size => "50x50"), root_path %>

        </div>

              <% if current_user %>
              <p class="nav navbar-text">
               Signed in as <strong><%= current_user.first_name %> <%=current_user.last_name %></strong>
                </p>
        
                <p class="nav navbar-text navbar-right" >
                <%= link_to "Logout", logout_path, id: "sign_out", method: :delete %> </p>
                <% else %>
                <p class="nav navbar-text">                  <%= link_to "Login with Google", "/auth/google_oauth2", id: "sign_in" %></p>
                <% end %>
        
    </div>
  </nav>

    <%= yield %>
  </body>
</html>
