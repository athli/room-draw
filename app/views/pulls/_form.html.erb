<%= form_with(model: pull, local: true) do |form| %>


  <%= form.fields_for :room_assignment_attributes do |room_assignment| %>
    <div>
    <%= room_assignment.label :student_id %>
    <%= room_assignment.select :student_id, Student.all {|student| [get_name(student), student.id]}, id: :room_assignment_student_id %>
    </div>
    <div>
      <%= room_assignment.label :room_id %>
      <%= room_assignment.select :room_id, Room.all {|room| [room.id, room.id]}, id: :room_assignment_room_id %>
    </div>

    <%= form.hidden_field @pull, id: :room_assignment_pull_id %> 
    <!--TO DO: Room assignment type?-->
    <%= form.hidden_field 1, id: :room_assignment_assignment_type %>

  <% end %>

  <% if pull.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pull.errors.count, "error") %> prohibited this pull from being saved:</h2>

      <ul>
      <% pull.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
  </div>


  <div class="field">
    <%= form.label :pull_number %>
    <%= form.collection_select :student_id, @students, :id, :room_draw_number %>
  </div>

  <!-- TO DO: Senior rounds -->

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message, id: :pull_message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
