<%= form_with(model: pull, local: true) do |form| %>


  <%= field_set_tag 'Room Assignments' do %>
      <%= form.fields_for :room_assignments do |room_assignment| %>
  
          <div>
            <%= room_assignment.label :student_id %>
            <%= room_assignment.collection_select :student_id, Student.all, :id, :room_draw_number, id: :room_assignment_student_id %>
          </div>
          <div>
            <%= room_assignment.label :room_id %>
            <%= room_assignment.grouped_collection_select :room_id, Dorm.all, :rooms, :name, :id,:number, id: :room_assignment_room_id %>
          </div> 

          <div>
            <%= room_assignment.label :assignment_type %>
            <%= room_assignment.select :assignment_type, RoomAssignment.assignment_types.keys.to_a, id: :room_assignment_assignment_type %>
          </div> 
  
      <% end %>

  <% end %> 

  <% if pull.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pull.errors.count, "error") %> prohibited this pull from being saved:</h2>

      <ul>
      <% pull.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
  </div>

  <div class="field">
    <%= form.label :pull_number %>
    <%= form.collection_select :student_id, @pull.students, :id, :room_draw_number %>
  </div>

  <!-- TO DO: Senior rounds -->

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message, id: :pull_message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

