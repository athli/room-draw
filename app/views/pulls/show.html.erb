<p id="notice"><%= notice %></p>

<% if current_user.is_admin? %>
<h1>Create/Edit Pull <%= @pull.id %></h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Number</th>
      <th>Room</th>
      <th>Actions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pull.room_assignments.each do |room_assignment| %>
      <tr>
        <td><%= student_name(room_assignment) %></td>
        <td><%= student_number(room_assignment) %></td>
        <td><%= room_assignment.room_id %></td>
        <td><%= link_to 'Delete', room_assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

<!-- -->
<%= form_with(model: @room_assignment, local: true) do |form| %>
  <tr>
  <td>
  <%= form.select :student_id, Student.all {|student| [get_name(student), student.id]}, id: :room_assignment_student_id %>
  </td>

  <td></td>

  <td>
  <%= form.select :room_id, Room.all {|room| [room.id, room.id]}, id: :room_assignment_room_id %>
  </td>
  </tr>

    <%= form.hidden_field @pull, id: :room_assignment_pull_id %>
    <!--TO DO: Room assignment type?-->
    <%= form.hidden_field 1, id: :room_assignment_assignment_type %>

  <div class="actions">
    <%= form.submit  %>
  </div>
<% end %>

<!-- -->



  <%= simple_form_for(@pull) do |f|%>
    <div class="form-group-3">
      <%= f.input :message %>
    </div>
  <% end %>

  </tbody>
</table>

<br>

<%= form_with(model: @pull, local: true) do |form| %>
  <% if @pull.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(pull.errors.count, "error") %> prohibited this pull from being saved:</h2>

      <ul>
      <% pull.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    
  </div>

  <div class="field">
    <%= form.label :pull_number %>
    <%= form.collection_select :student_id, @pull.students, :id, :room_draw_number %>
  </div>

  <!-- TO DO: Senior rounds -->

  <div class="field">
    <%= form.label :message %>
    <%= form.text_field :message, id: :pull_message %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



<%= link_to 'Back', pulls_path %>

<% end %>