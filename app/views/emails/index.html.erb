<h1 style="color: #5D6D7E">Emails</h1>
  <table id="emails" class="sortable">
    <thead>
      <tr>
        <th>Created At</th>
        <th>Send Date</th>
        <th>To</th>
        <th>Subject</th>
        <th>Message</th>
        <th>Status</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% @emails.each do |email| %>
        <tr>
          <td><%= format_datetime(email.created_at) %> </td>
          <td><%= email.sendDate %> </td>
          <td><%= recipients(email).html_safe %></td>
          <td><%= email.subject %> </td>
          <td><%= email.description %> </td>
          <td><%= email.sent_status ? "Sent" : "Unsent" %> </td>
          <td><%= link_to 'Edit', edit_email_path(email) %></td>
          <td><%= link_to destroy_action(email).html_safe, email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Email', new_email_path %>
